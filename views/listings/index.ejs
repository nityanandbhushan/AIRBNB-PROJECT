<%layout("layouts/boilerplate")-%> 

  <h1>All Listings</h1>

  <!-- <form method="GET" action="/listings/new">
        <button>Create new Listings</button>
    </form> -->
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(item of allListings){ %>
        <a href="/listings/<%=item._id%>" class="listings-link" > 
            <div class="card col listing-card">
            <img
              src="<%=item.image.url%>"
              class="card-img-top"
              alt="listings_image"
              style="height: 20rem"
            /> 
            <div  class="card-img-overlay"></div>
            <div class="card-body">
              <p class="card-text">
                <b><%=item.title%></b>
                <br />
                &#8377;<%=item.price%> /night
              </p>
            </div>
          </div>
        </a>
    <%}%>
  </div>

